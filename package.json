{
  "private": true,
  "name": "luludanmaku",
  "description": "lulu专用弹幕姬",
  "version": "1.1.0",
  "author": "Payne <payne9586@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "LuluDanmaku",
    "appId": "com.lulu.danmaku",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "extraResources": [
      {
        "from": "overlay",
        "to": "overlay"
      }
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/pro-components": "^2.8.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/socket.io": "^3.0.1",
    "antd": "^5.29.3",
    "brotli": "^1.3.3",
    "cors": "^2.8.5",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "express": "^5.2.1",
    "fs-extra": "^11.3.3",
    "lru-cache": "^11.2.4",
    "md5": "^2.3.0",
    "moment": "^2.30.1",
    "pako": "^2.1.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/md5": "^2.3.6",
    "@types/pako": "^2.0.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2"
  }
}
